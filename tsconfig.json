{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6",
            "es2017"
        ],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "typeRoots": [
            "./src/@types",
            "./node_modules/@types"
        ],
    },
    "exclude": [
        "node_modules",
        "src/tests/**/*.test.ts",
    ],
}
